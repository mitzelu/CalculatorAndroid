<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:background="#ff000000"
    android:baselineAligned="false">

    <GridLayout
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:columnOrderPreserved="false"
        android:clickable="false"
        android:background="#ff000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/intermediaryResult"
            android:layout_columnSpan="4"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/result"
            android:editable="false"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_columnSpan="4"
            android:textColor="#ab5c00" />

        <Button
            android:text="CE"
            android:id="@+id/buttonCE"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:textColor="#ffffff"
            android:background="#395e7b"
            android:layout_margin="2dp"/>

        <Button
            android:text="รท"
            android:id="@+id/buttonDiv"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:layout_gravity="fill"
            android:textColor="#ffffff"
            android:background="#363d43"
            android:layout_margin="2dp" />


        <Button
            android:text="x"
            android:id="@+id/buttonMul"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:layout_gravity="fill"
            android:textColor="#ffffff"
            android:background="#363d43"
            android:layout_margin="2dp" />

        <Button
            android:text="C"
            android:id="@+id/buttonC"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:textColor="#ffffff"
            android:background="#363d43"
            android:layout_margin="2dp" />

        <Button
            android:text="7"
            android:id="@+id/button7"
            android:layout_gravity="fill"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:textColor="#ffffff"
            android:background="#5c676d"
            android:layout_margin="2dp" />

        <Button
            android:text="8"
            android:id="@+id/button8"
            android:layout_gravity="fill"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:textColor="#ffffff"
            android:background="#5c676d"
            android:layout_margin="2dp" />

        <Button
            android:text="9"
            android:id="@+id/button9"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:textColor="#ffffff"
            android:background="#5c676d"
            android:layout_margin="2dp" />

        <Button
            android:text="-"
            android:id="@+id/buttonSub"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:layout_gravity="fill"
            android:textColor="#ffffff"
            android:background="#363d43"
            android:layout_margin="2dp" />

        <Button
            android:text="4"
            android:id="@+id/button4"
            android:layout_gravity="fill"
            android:layout_height="@dimen/size"
            android:layout_width="@dimen/size"
            android:textColor="#ffffff"
            android:background="#5c676d"
            android:layout_margin="2dp" />

        <Button
            android:text="5"
            android:id="@+id/button5"
            android:layout_gravity="fill"
            android:textColor="#ffffff"
            android:background="#5c676d"
            android:layout_margin="2dp" />

        <Button
            android:text="6"
            android:id="@+id/button6"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:textColor="#ffffff"
            android:background="#5c676d"
            android:layout_margin="2dp" />

        <Button
            android:text="+"
            android:id="@+id/buttonAdd"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:layout_gravity="fill"
            android:textColor="#ffffff"
            android:background="#363d43"
            android:layout_margin="2dp" />

        <Button
            android:text="1"
            android:id="@+id/button1"
            android:layout_gravity="fill"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:textColor="#ffffff"
            android:background="#5c676d"
            android:layout_margin="2dp" />

        <Button
            android:text="2"
            android:id="@+id/button2"
            android:layout_gravity="fill"
            android:textColor="#ffffff"
            android:background="#5c676d"
            android:layout_margin="2dp" />

        <Button
            android:text="3"
            android:id="@+id/button3"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:textColor="#ffffff"
            android:background="#5c676d"
            android:layout_margin="2dp" />

        <Button
            android:text="( )"
            android:id="@+id/buttonPar"
            android:layout_gravity="fill"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:textColor="#ffffff"
            android:background="#363d43"
            android:layout_margin="2dp" />

        <Button
            android:text="0"
            android:id="@+id/button0"
            android:layout_gravity="fill"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:textColor="#ffffff"
            android:background="#5c676d"
            android:layout_margin="2dp" />

        <Button
            android:text="."
            android:id="@+id/buttonDot"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:layout_gravity="fill"
            android:textColor="#ffffff"
            android:background="#5c676d"
            android:layout_margin="2dp" />

        <Button
            android:text="+/_"
            android:id="@+id/buttonPlusMinus"
            android:layout_gravity="fill"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:textColor="#ffffff"
            android:background="#5c676d"
            android:layout_margin="2dp" />

        <Button
            android:text="="
            android:id="@+id/buttonEqual"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:layout_gravity="fill"
            android:textColor="#ffffff"
            android:background="#ab5c00"
            android:layout_margin="2dp" />

    </GridLayout>
</LinearLayout>